<p id="notice"><%= notice %></p>

<% @trip = @participation.activity.schedule.trip %>
<% @schedule = @participation.activity.schedule %>
<% @activity = @participation.activity %>

<h1>Trip <%= @trip.id%></h1>
<h2>Schedule <%= @schedule.id%></h2>
<h3>Activity <%= @activity.id%></h3>

<table class ="table">
 <thead class="thead-default">
    <tr >
      <th>
        Schedule Date
      </th>
      <th>
        Activity Name
      </th>
      <th>
        Activity ID
      </th>
      <th>
        Activity Start Time
      </th>
      <th>
        Activity End Time
      </th>
      <th>
        Activity Description
      </th>
      <th>
        Activity Google Place
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @schedule.date%>
      </td>
      <td>
        <%= @activity.name%>
      </td>
      <td>
        <%= @activity.id%>
      </td>
      <td>
        <%= @activity.start_time%>
      </td>
      <td>
        <%= @activity.end_time%>
      </td>
      <td>
        <%= @activity.description%>
      </td>
      <td>
        <%= @activity.place%>
      </td>
    </tr>
  </tbody>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Participation ID</th>
      <th>Participation Status</th>
      <th>Participant User ID</th>
      <th>Participant First Name</th>
      <th>Participant Last Name</th>
      <th>Participant Destroy Link</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @participation.id %></td>
      <td><%= @participation.status %></td>
      <td><%= @participation.user_id %></td>
      <td><%= @participation.user.first_name %></td>
      <td><%= @participation.user.last_name %></td>
      <td><%= link_to 'Destroy', [@trip, @schedule, @activity, @participation], method: :delete, data: { confirm: 'Are you sure?' } %>
    <tr>
  </tbody>
</table>


<%= link_to 'Trips', trips_path %>
