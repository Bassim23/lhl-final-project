<div id="register-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Register</h4>
            </div>
            <div class="modal-body">
              <%= form_for :user, url: register_path do |f| %>

                First Name: <%= f.text_field :first_name, class: 'form-control' %>
                Last Name: <%= f.text_field :last_name, class: 'form-control' %>
                <br />
                Age: <%= f.select :age, @age, class: 'form-control' %>
                <br />
                <br />
                Gender: <%= f.select :gender, ['Female', 'Male', 'Rather not say'], class: 'form-control' %>
                <br />
                <br />
                Nationality: <%= f.select :nationality, @nationality, class: 'form-control' %>
                <br />
                <br />

                Summary: <%= f.text_field :summary, class: 'form-control' %>

                Email: <%= f.email_field :email, class: 'form-control' %>

                Password: <%= f.password_field :password, class: 'form-control' %>
                Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control' %>
                <hr>
                <%= f.submit "Submit", class: 'btn btn-primary form-control' %>
              <% end %>
            </div>
        </div>
    </div>
</div>
