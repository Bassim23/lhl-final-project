<article class="panel panel-default trip-panel" data-id="<%= trip.id %>" data-name="<%= trip.name %>" data-class="trip-panel">
    <div class="panel-heading icon">
        <i class="fa fa-suitcase"></i>
    </div>
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong class="panel-title-text"><%= trip.name %></strong>
            <%= link_to trip, method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash-o trip-delete-icon" aria-hidden="true"></i>
            <% end %>
            <i class="fa fa-pencil trip-edit-icon" aria-hidden="true"></i>
        </h2>
    </div>
    <div class="panel-body">
        <%= trip.summary %>
    </div>
    <div class="panel-footer">
        <small>
            <select class="panel-footer-kind-selector" data-class="panel-footer-kind-selector" disabled>
            <% if trip.kind === 'Private' %>
                <option selected>Private</option>
                <option>Public</option>
            <% else %>
                <option>Private</option>
                <option selected>Public</option>
            <% end %>
            </select>
        </small>
    </div>
</article>
<div class="separator text-muted">
    Created At
    <time><%= trip.created_at.to_formatted_s(:short) %></time>
</div>

