
<!-- Panel -->
<article class="panel panel-default trip-panel" data-id="<%= trip.id %>">
    <!-- Icon -->
    <div class="panel-heading icon">
        <i class="fa fa-suitcase"></i>
    </div>
    <!-- /Icon -->
    <!-- Heading -->
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong><%= trip.name %></strong>
            <%= link_to trip, method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash-o trip-edit-delete-icons" aria-hidden="true"></i>
            <% end %>
            <i class="fa fa-pencil trip-edit-delete-icons" aria-hidden="true"></i>
        </h2>
    </div>
    <!-- /Heading -->
    <!-- Body -->
    <div class="panel-body">
        <%= trip.summary %>
    </div>
    <!-- /Body -->
    <!-- Footer -->
    <div class="panel-footer">
        <small><%= trip.kind %></small>
    </div>
    <!-- /Footer -->
</article>
<!-- /Panel -->
<!-- Separator -->
<div class="separator text-muted">
    Created At
    <time><%= trip.created_at.to_formatted_s(:short) %></time>
</div>
<!-- /Separator -->
